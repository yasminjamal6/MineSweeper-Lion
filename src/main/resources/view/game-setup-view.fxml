<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="root" prefHeight="750" prefWidth="1200" stylesheets="@/css/game-setup.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.GameSetupController">

    <fx:define>
        <!-- 拽爪转  砖转驻转 专转 拽砖 -->
        <ToggleGroup fx:id="difficultyGroup" />
    </fx:define>

    <children>
        <AnchorPane styleClass="background-pane">
            <children>
                <VBox alignment="TOP_CENTER" spacing="24" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="80" AnchorPane.rightAnchor="80" AnchorPane.topAnchor="40">

                    <!-- 专住 专 -->
                    <VBox alignment="TOP_CENTER" maxWidth="900" spacing="14" styleClass="card-main">

                        <!-- 砖专转 注: 驻转专 Back 爪  -->
                        <HBox alignment="CENTER_RIGHT">
                            <Region HBox.hgrow="ALWAYS" />
                            <Button
                                    onAction="#onBack"
                                    styleClass="secondary-action-btn small-back-btn"
                                    text="Back to Home" />
                        </HBox>


                        <!-- 转专转 + 转转 转专转 -->
                        <VBox alignment="CENTER" spacing="6">
                            <Label styleClass="title-label" text="Prepare the Den" />
                            <Label styleClass="subtitle-label" text="Get your lions ready for the challenge!" />
                        </VBox>

                        <!-- Hearts -->
                        <VBox alignment="CENTER" spacing="6">
                            <HBox alignment="CENTER" spacing="4">
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                                <Label styleClass="heart-icon" text="ワ" />
                            </HBox>
                            <Label styleClass="hearts-label" text="Shared Hearts: 10 / 10" />
                        </VBox>

                        <!-- Players -->
                        <HBox alignment="CENTER" spacing="22">

                            <!-- Player A -->
                            <VBox spacing="10" styleClass="player-card">
                                <Label styleClass="player-title" text="Player A " />
                                <Label styleClass="field-label" text="Player name" />
                                <TextField fx:id="playerAName" promptText="Enter name..." styleClass="name-field" />

                                <Label styleClass="field-label" text="Board style" />
                                <HBox alignment="CENTER_LEFT" spacing="8">
                                    <Button styleClass="board-style-pill board-gold" text="Royal Gold" />
                                    <Button styleClass="board-style-pill board-savanna" text="Savanna Sunset" />
                                </HBox>
                            </VBox>

                            <!-- Player B -->
                            <VBox spacing="10" styleClass="player-card">
                                <Label styleClass="player-title" text="Player B " />
                                <Label styleClass="field-label" text="Player name" />
                                <TextField fx:id="playerBName" promptText="Enter name..." styleClass="name-field" />

                                <Label styleClass="field-label" text="Board style" />
                                <HBox alignment="CENTER_LEFT" spacing="8">
                                    <Button styleClass="board-style-pill board-gold" text="Royal Gold" />
                                    <Button styleClass="board-style-pill board-savanna" text="Savanna Sunset" />
                                </HBox>
                            </VBox>
                        </HBox>







                        <!-- Difficulty -->
                        <VBox alignment="CENTER" spacing="10">
                            <Label styleClass="section-title" text="Choose the challenge level" />
                            <HBox alignment="CENTER" spacing="14">
                                <ToggleButton fx:id="easyBtn"
                                              styleClass="difficulty-btn"
                                              text="Easy"
                                              toggleGroup="$difficultyGroup" />
                                <ToggleButton fx:id="mediumBtn"
                                              styleClass="difficulty-btn"
                                              text="Medium"
                                              toggleGroup="$difficultyGroup" />
                                <ToggleButton fx:id="hardBtn"
                                              styleClass="difficulty-btn"
                                              text="Hard"
                                              toggleGroup="$difficultyGroup" />
                            </HBox>
                        </VBox>


                        <!-- Start button -->
                        <HBox alignment="CENTER" spacing="20">
                            <Button onAction="#onStart" styleClass="primary-action-btn" text="Start the Adventure " />
                        </HBox>

                    </VBox>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
