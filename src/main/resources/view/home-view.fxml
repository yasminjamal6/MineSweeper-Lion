<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/23"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="main.controller.HomeController"
           stylesheets="@../css/home.css"
           styleClass="root-pane"
           prefWidth="1200.0" prefHeight="800.0">

    <children>

        <ImageView fitWidth="1200.0" fitHeight="800.0" preserveRatio="false">
            <image>
                <Image url="@../images/lion.jpg"/>
            </image>
        </ImageView>

        <AnchorPane styleClass="overlay-vertical"/>
        <AnchorPane styleClass="overlay-diagonal"/>

        <VBox alignment="CENTER"
              spacing="28.0"
              styleClass="content-wrapper">

            <!-- HERO SECTION -->
            <VBox alignment="CENTER" spacing="16.0" fx:id="heroSection">

                <StackPane styleClass="lion-badge"
                           maxWidth="450"
                           prefWidth="450"
                           minWidth="450">
                    <VBox alignment="CENTER" spacing="6.0">
                        <HBox alignment="CENTER" spacing="8.0">
                            <Label text="ðŸ¦" styleClass="badge-emoji"/>
                            <Label text="TEAM LION" styleClass="badge-title"/>
                            <Label text="ðŸ¦" styleClass="badge-emoji"/>
                        </HBox>
                        <Label text='"Hakuna Matata - No Worries!"' styleClass="badge-subtitle"/>
                    </VBox>
                </StackPane>

                <Label text="Mine Sweeper Smart" styleClass="main-title"/>
                <Label text="ðŸŒŸ Legendary trivia from the savanna! ðŸŒŸ" styleClass="main-subtitle"/>

            </VBox>

            <!-- BUTTONS SECTION -->
            <VBox alignment="CENTER" spacing="14.0" styleClass="buttons-wrapper" fx:id="buttonsSection">

                <Button text="Start Adventure "
                        styleClass="primary-btn"
                        onAction="#onStartAdventure"/>

                <HBox alignment="CENTER" spacing="20">
                    <Button text="Question Manager"
                            styleClass="secondary-btn"
                            onAction="#onQuestionManager" />
                    <Button text="Game History"
                            styleClass="secondary-btn"
                            onAction="#onHistory" />
                </HBox>

            </VBox>

            <!-- FEATURES SECTION -->
            <HBox alignment="CENTER" spacing="18.0" styleClass="features-row" fx:id="featuresRow">

                <VBox styleClass="info-card" spacing="6.0" alignment="CENTER">
                    <Label text="King of the Jungle" styleClass="card-title"/>
                    <Label text="Lions rule the board!" styleClass="card-subtitle"/>
                </VBox>

                <VBox styleClass="info-card" spacing="6.0" alignment="CENTER">
                    <Label text="Pride Rock" styleClass="card-title"/>
                    <Label text="Challenge your knowledge" styleClass="card-subtitle"/>
                </VBox>

                <VBox styleClass="info-card" spacing="6.0" alignment="CENTER">
                    <Label text="Circle of Life" styleClass="card-title"/>
                    <Label text="Collect points and win" styleClass="card-subtitle"/>
                </VBox>

            </HBox>

            <!-- FOOTER -->
            <VBox alignment="CENTER" spacing="8.0" styleClass="footer-box" fx:id="footerBox">
                <HBox alignment="CENTER" spacing="8.0" styleClass="footer-pill">
                    <Label text="" styleClass="footer-emoji"/>
                    <Label text='"Remember who you are"' styleClass="footer-quote"/>
                    <Label text="" styleClass="footer-emoji"/>
                </HBox>
                <Label text="" styleClass="footer-signature"/>
            </VBox>

        </VBox>


        <!-- Floating How To Play button (NOW ON TOP) -->
        <Button text="How to Play?"
                styleClass="how-btn"
                onAction="#onHowToPlay"
                StackPane.alignment="TOP_LEFT">
            <StackPane.margin>
                <Insets top="18" left="18"/>
            </StackPane.margin>
        </Button>
        <Button text="âš™"
                fx:id="settingsBtn"
                styleClass="settings-btn"
                onAction="#openSettings"
                StackPane.alignment="TOP_RIGHT">
            <StackPane.margin>
                <Insets top="18" right="18"/>
            </StackPane.margin>
        </Button>

    </children>

</StackPane>
