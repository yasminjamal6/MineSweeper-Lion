<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.controller.SettingsController"
            fx:id="settingsRoot"
            prefWidth="460" prefHeight="430"
            stylesheets="@../css/home.css"
            styleClass="settings-root">

    <center>
        <StackPane>
            <VBox spacing="18"
                  alignment="CENTER"
                  maxWidth="360">

                <Label fx:id="settingsTitleLabel"
                       text="Settings âš™"
                       styleClass="settings-title"/>

                <!-- SOUND -->
                <HBox spacing="14" alignment="CENTER" styleClass="settings-row">
                    <Label fx:id="soundLabel"
                           text="Sound:"
                           styleClass="settings-label"/>
                    <ToggleButton fx:id="soundToggle"
                                  text="ON"
                                  styleClass="toggle-setting"/>
                </HBox>

                <!-- THEME -->
                <HBox spacing="14" alignment="CENTER" styleClass="settings-row">
                    <Label fx:id="themeLabel"
                           text="Theme:"
                           styleClass="settings-label"/>
                    <ToggleButton fx:id="themeToggle"
                                  text="LIGHT"
                                  styleClass="toggle-setting"/>
                </HBox>

                <!-- LANGUAGE -->
                <HBox spacing="14" alignment="CENTER" styleClass="settings-row">
                    <Label fx:id="languageLabel"
                           text="Language:"
                           styleClass="settings-label"/>
                    <ToggleButton fx:id="languageToggle"
                                  text="English"
                                  styleClass="toggle-setting"/>
                </HBox>

                <!-- VOLUME -->
                <VBox alignment="CENTER" spacing="6">
                    <Label fx:id="volumeLabel"
                           text="Volume"
                           styleClass="settings-label"/>
                    <Slider fx:id="volumeSlider"
                            min="0" max="100" value="70"
                            prefWidth="280"/>
                </VBox>

                <!-- BRIGHTNESS -->
                <VBox alignment="CENTER" spacing="6">
                    <Label fx:id="brightnessLabel"
                           text="Brightness"
                           styleClass="settings-label"/>
                    <Slider fx:id="brightnessSlider"
                            min="0" max="100" value="50"
                            prefWidth="280"/>
                </VBox>

                <Button fx:id="closeSettingsBtn"
                        text="Close"
                        onAction="#closeSettings"
                        styleClass="close-settings-btn"/>

            </VBox>
        </StackPane>
    </center>

</BorderPane>
